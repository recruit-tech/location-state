{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "dts": {
      "dependsOn": ["^dts"],
      "outputs": ["types/**"]
    },
    "build": {
      "dependsOn": ["dts", "^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "typecheck": {
      "dependsOn": ["dts"]
    },
    "lint": {
      "dependsOn": ["dts"]
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"]
    }
  },
  "globalDependencies": ["**/tsconfig.json"]
}
