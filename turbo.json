{
  "$schema": "https://turbo.build/schema.json",
  "experimentalUI": true,
  "pipeline": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "dts": {
      "dependsOn": ["^dts"],
      "outputs": ["types/**"]
    },
    "build": {
      "dependsOn": ["dts", "^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "typecheck": {
      "dependsOn": ["dts"]
    },
    "integration-test": {},
    "test": {
      "outputs": ["coverage/**"]
    }
  },
  "globalDependencies": ["**/tsconfig.json"]
}
