{
  "name": "location-state",
  "private": true,
  "version": "0.0.0",
  "description": "State management library for React that synchronizes with history entries supporting Next.js App Router.",
  "engines": {
    "pnpm": "8.x",
    "npm": "please_use_pnpm_instead"
  },
  "packageManager": "pnpm@8.15.8",
  "keywords": [],
  "license": "MIT",
  "scripts": {
    "build": "turbo build",
    "test": "turbo test",
    "integration-test": "turbo integration-test --concurrency=1",
    "typecheck": "turbo typecheck",
    "check": "biome check .",
    "check:apply": "biome check . --apply",
    "ci-check": "pnpm check && turbo dts typecheck build test",
    "commit-check": "pnpm check && turbo typecheck test",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css,json,cjs,mjs}": "biome check --apply"
  },
  "devDependencies": {
    "@biomejs/biome": "1.7.3",
    "@changesets/cli": "2.27.1",
    "@playwright/test": "1.44.0",
    "@types/node": "20.12.10",
    "@types/react": "18.2.67",
    "@types/react-dom": "18.2.22",
    "@vitejs/plugin-react": "4.2.1",
    "husky": "9.0.11",
    "jsdom": "24.0.0",
    "lint-staged": "15.2.2",
    "navigation-api-types": "0.5.1",
    "playwright": "1.44.0",
    "react": "18.2.0",
    "tsup": "8.0.2",
    "turbo": "1.13.3",
    "typescript": "5.4.5",
    "vitest": "1.6.0"
  }
}
